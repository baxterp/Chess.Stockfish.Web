                    </a>
                    <a href="https://www.linkedin.com/in/brpsoft/" class="ms-1 icon-dark-grey" style="padding-left:5px" target="_blank">
                        <i class="fab fa-linkedin-in fa-lg"></i>
                    </a>
                    <a href="#" class="ms-1 icon-dark-grey" style="padding-left:5px" target="_blank">
                        <i class="fab fa-twitter fa-lg"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
